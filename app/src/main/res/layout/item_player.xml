<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPlayerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPlayerProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:src="@drawable/profile_default"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <GridLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                android:id="@+id/txtPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                tools:text="نام بازیکن" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/item_player_list_post_label"
                tools:text="پست بازی :" />

            <TextView
                android:id="@+id/txtPlayerPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="14sp"
                tools:text="پست بازیکن" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/item_player_list_team_label"
                tools:text="تیم :" />

            <TextView
                android:id="@+id/txtPlayerTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="14sp"
                tools:text="تیم بازیکن" />

        </GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>