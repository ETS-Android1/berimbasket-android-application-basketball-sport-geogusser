<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardStadiumItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgStadiumImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/stadium1"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <GridLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                android:id="@+id/txtStadiumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="16sp"
                tools:text="نام ورزشگاه" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/item_stadium_list_phone"
                tools:text="تلفن :" />

            <TextView
                android:id="@+id/txtStadiumPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="14sp"
                tools:text="تلفن ورزشگاه" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/item_stadium_list_address"
                tools:text="آدرس :" />

            <TextView
                android:id="@+id/txtStadiumAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:maxLines="2"
                android:padding="2dp"
                android:textSize="14sp"
                tools:text="آدرس ورزشگاه" />

        </GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>