<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardStadiumItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgStadiumImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/stadium1"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txtStadiumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imgStadiumImage"
            android:ellipsize="end"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:textSize="16sp"
            tools:text="نام ورزشگاه" />

        <TextView
            android:id="@+id/txtTelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtStadiumName"
            android:layout_toEndOf="@id/imgStadiumImage"
            android:ellipsize="end"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/item_stadium_list_phone"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="تلفن :" />

        <TextView
            android:id="@+id/txtStadiumPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtStadiumName"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/txtTelLabel"
            android:ellipsize="end"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:text="تلفن ورزشگاه" />

        <TextView
            android:id="@+id/txtAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTelLabel"
            android:layout_toEndOf="@id/imgStadiumImage"
            android:ellipsize="end"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/item_stadium_list_address"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="آدرس :" />

        <TextView
            android:id="@+id/txtStadiumAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTelLabel"
            android:layout_toEndOf="@id/txtAddressLabel"
            android:ellipsize="end"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:maxLines="2"
            android:padding="2dp"
            android:textSize="14sp"
            tools:text="آدرس ورزشگاه" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:src="@drawable/ic_three_dots_black_vertical" />

    </RelativeLayout>

</android.support.v7.widget.CardView>