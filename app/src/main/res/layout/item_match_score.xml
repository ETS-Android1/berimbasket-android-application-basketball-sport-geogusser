<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMatchItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@color/colorDarkGrey"
    app:cardCornerRadius="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtScoreDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/txtDate"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/yekan"
            android:textColor="@color/colorGold"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtMatchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/txtDate"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/yekan"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorGold"
            android:fontFamily="@font/yekan"
            android:text="@string/item_match_score_separator" />

        <TextView
            android:id="@+id/txtHomeScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/txtDate"
            android:fontFamily="@font/yekan"
            android:text="@string/item_match_score_home_default_score"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtAwayScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txtDate"
            android:fontFamily="@font/yekan"
            android:text="@string/item_match_score_away_default_score"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@id/txtHomeScore"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHomeLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/manchester" />

            <TextView
                android:id="@+id/txtHomeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/yekan"
                android:textColor="@color/colorWhite"
                android:text="@string/entity_match_score_home_default" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@id/txtAwayScore"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAwayLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/chelsea" />

            <TextView
                android:id="@+id/txtÙŽAwayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/yekan"
                android:text="@string/entity_match_score_away_default" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>