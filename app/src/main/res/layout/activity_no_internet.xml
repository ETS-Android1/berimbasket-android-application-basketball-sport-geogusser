<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.internet.NoInternetActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_signal_wifi_off_primary_24dp"
        android:fontFamily="@font/yekan"
        android:text="@string/activity_no_internet_connection_fail_text" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnTryAgain"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/yekan"
        android:padding="15dp"
        android:text="@string/activity_no_internet_try_again_button"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorPrimary" />

</LinearLayout>
